import re
@

<<Custom HTTP handler>>=
class MyHTTPHandler(SimpleHTTPRequestHandler):
    def do_GET(self):
        n = re.findall(r"^\/prime\/(\d+)$", self.path)
        if len(n) > 0:
            n = int(n[0])
            new_prime = next_prime(n)
            self.wfile.write(bytes(new_prime))
        else:
            SimpleHTTPRequestHandler.do_GET(self)
@
